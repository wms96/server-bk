{
  "name": "cezerin2-client",
  "version": "0.38.0",
  "description": "Cezerin2 API client library. Work on browser and server.",
  "keywords": [
    "cezerin2",
    "cezerin",
    "cezerin api",
    "cezerin ajax",
    "cezerin web store",
    "ecommerce api",
    "shopping cart api"
  ],
  "homepage": "https://cezerin.org",
  "bugs": {
    "url": "https://github.com/Cezerin2/client/issues"
  },
  "license": "Unlicense",
  "author": "Restmount, Himadu, Community",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cezerin2/client.git"
  },
  "scripts": {
    "compile": "tsc",
    "build": "babel build -d lib",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged",
    "test": "jest --coverage --runInBand --coverageDirectory=reports/coverage/",
    "test:watch": "jest --watchAll"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    }
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "cross-fetch": "^3.0.4",
    "query-string": "^6.1.0",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.2.4",
    "prettier": "^2.0.5"
  }
}
